<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="sports-center" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>sports.center.com.model.User</class>
        <class>sports.center.com.model.Trainee</class>
        <class>sports.center.com.model.Trainer</class>
        <class>sports.center.com.model.Training</class>
        <class>sports.center.com.model.TrainingType</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="${DATASOURCE_URL}"/>
            <property name="jakarta.persistence.jdbc.user" value="${DATASOURCE_USER}"/>
            <property name="jakarta.persistence.jdbc.password" value="${DATASOURCE_PASSWORD}"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.jdbc.time_zone" value="UTC"/>
        </properties>
    </persistence-unit>
</persistence>